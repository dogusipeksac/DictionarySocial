<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterContinueActivity">


    <RelativeLayout
        android:id="@+id/title_Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@drawable/app_bar_background"
        >
        <TextView
            android:text="Register Continue"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>




    <LinearLayout
        android:layout_below="@id/title_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="35dp"
            android:id="@+id/user_image_register"
            android:src="@drawable/ic_people"
            android:layout_below="@id/title_Button"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <ImageView
            android:id="@+id/chose_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_collections" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/full_name_edittext"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/custom_username_icon"
                android:drawablePadding="10dp"
                android:hint="Full Name"
                android:inputType="text"
                android:textColorHint="#E5E5E5" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description_register"

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="start"
                android:drawableEnd="@drawable/custom_description_icon"
                android:drawablePadding="10dp"
                android:hint="Description"
                android:inputType="text"
                android:textColorHint="#E5E5E5" />

        </com.google.android.material.textfield.TextInputLayout>
        <Spinner
            android:layout_marginTop="20dp"
            android:id="@+id/language_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Spinner
            android:layout_marginTop="20dp"
            android:id="@+id/language_level_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/save_register"
            android:layout_marginTop="20sp"
            android:text="Save"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>